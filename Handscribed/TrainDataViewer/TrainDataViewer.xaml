<UserControl x:Class="Handscribed.TrainDataViewer.TrainDataViewer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Handscribed.TrainDataViewer"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
              d:DataContext="{d:DesignInstance local:TrainDataViewerViewModel}">
    <UserControl.DataContext>
        <local:TrainDataViewerViewModel />
    </UserControl.DataContext>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Margin="10" Width="200">
            <Button Content="Load MNIST Data" 
                    Command="{Binding LoadCommand}"
                    Margin="0,0,0,10" Height="30"/>

            <ComboBox x:Name="DataTypeSelector" 
                  ItemsSource="{Binding MNISTOptions}"  
                  SelectedItem="{Binding SelectedMNISTOption}"
                  IsEnabled="{Binding IsDataLoaded}">
            </ComboBox>

            <TextBlock Text="Select Image Index:" Margin="0,10,0,5"/>

            <Slider Minimum="0" 
                    Maximum="{Binding ImageCount, Converter={StaticResource SubtractOneConverter}}"
                    Value="{Binding CurrentIndex, Mode=TwoWay}"
                    Margin="0,0,0,10"
                    IsEnabled="{Binding IsDataLoaded}"/>

            <TextBlock Text="Current Index:"/>
            <TextBlock Text="{Binding CurrentIndexText}" FontWeight="Bold"/>

            <TextBlock Text="Actual Label:" Margin="0,10,0,5"/>
            <TextBlock Text="{Binding CurrentLabel}" 
                       FontSize="24" FontWeight="Bold" 
                       HorizontalAlignment="Center"/>

            <Separator Margin="0,20,0,10"/>

            <Button Content="◀ Previous" 
                    Command="{Binding PreviousCommand}"
                    Margin="0,0,0,5"
                    IsEnabled="{Binding IsDataLoaded}"/>

            <Button Content="Next ▶" 
                    Command="{Binding NextCommand}"
                    IsEnabled="{Binding IsDataLoaded}"/>

            <Separator Margin="0,20,0,10"/>
        </StackPanel>

        <Border Grid.Column="1" Margin="10" Background="LightGray" 
                BorderBrush="Black" BorderThickness="1">
            <Grid>
                <!-- Original 28x28 image -->
                <Border HorizontalAlignment="Center" VerticalAlignment="Center" 
                        BorderBrush="Black" BorderThickness="1" Background="White">
                    <Image Source="{Binding CurrentImage}" 
                           Width="280" Height="280" 
                           Stretch="Uniform"/>
                </Border>
            </Grid>
        </Border>
    </Grid>
</UserControl>
